.nav.justify-content-between.d-flex
  .left-links
    = link_to "新規投稿", new_admin_post_path, class: "nav-item"
  .right-links
    - if authenticated?
      = link_to "ログアウト", session_path, data: { turbo_method: :delete }, class: "nav-item"
    - else
      = link_to "ログイン", new_session_path, class: "nav-item"

.main
  table.table.table-borderless
    thead
      tr
        td 投稿日
        td タイトル
        td 
    tbody
      - @posts.each do |post|
        tr
          td= post.created_at.strftime("%Y-%m-%d")
          td= link_to post.title, edit_admin_post_path(post)
          td= link_to "削除", admin_post_path(post), data: { turbo_method: :delete }
